<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyleBold">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyleNormal">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyleSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>


    <style name="OutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--        <item name="enforceMaterialTheme">false</item>-->
        <!--        <item name="useMaterialThemeColors">false</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>

        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <!--        <item name="android:button">@drawable/bg_input_check_selector</item>-->
        <item name="android:paddingLeft">12dp</item>
    </style>

</resources>